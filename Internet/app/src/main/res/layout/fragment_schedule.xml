<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cyan"
    tools:context=".ui.schedule.ScheduleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/schedule_name" />

        <EditText
            android:id="@+id/dateBeginEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/schedule_date_begin" />

        <EditText
            android:id="@+id/dateEndEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/schedule_date_end" />

        <EditText
            android:id="@+id/timesEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/schedule_times" />

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/schedule_description" />

        <Button
            android:id="@+id/createButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_btn" />

        <ListView
            android:id="@+id/schedulesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>